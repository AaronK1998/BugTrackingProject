            </KanbanColumns>
            <KanbanCardSettings HeaderField="Title" ContentField="Summary"></KanbanCardSettings>
        </SfKanban>

        <a href='/Storyboard/AddStoryboard' class="btn btn-outline-dark" role="button">
            Add Storyboard
        </a>
        <a href='/Storyboard/AddStoryboard' class="btn btn-outline-dark" role="button">
            Edit Storyboard
        </a>
        <a href='/Storyboard/AddStoryboard' class="btn btn-outline-dark" role="button">
            Delete Storyboard
        </a>
    </Authorized>
</AuthorizeView>

